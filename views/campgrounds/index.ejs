<% layout('layouts/boilerplate')%>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Camp Grounds</h1>
<a href="/campgrounds/new">Add a new Campground</a>

<% for(let camp of camps) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(camp.images.length){%>
      <img
        class="img-fluid"
        src="<%= camp.images[0].url %>"
        alt="<%= camp.title %>"
      />
      <%}else {%>
      <img
        src="https://res.cloudinary.com/dmk9sh1wn/image/upload/v1710254093/YelpCamp/nktavjhvqli4gxsoqxuy.png"
        alt=""
      />
      <%}%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %></small>
        </p>
        <a href="/campgrounds/<%= camp.id %>" class="btn btn-primary"
          >View <%= camp.title %></a
        >
      </div>
    </div>
  </div>
</div>
<a href="/campgrounds/<%=camp.id%>"></a>
<% } %>

<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN%>";
  const newCamps = { features: <%- JSON.stringify(camps)%> };
</script>
<script src="/js/clusterMap.js"></script>
